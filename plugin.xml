<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="pm-cordova-azure-notification-hubs"
        version="2.0.0">

    <name>CordovaAzureNotificationHubs</name>
    <description>Modernized Azure Notification Hubs plugin (AndroidX compatible)</description>
    <license>MIT</license>

    <js-module src="www/push.js" name="PushNotification">
        <clobbers target="PushNotification" />
    </js-module>

    <engines>
        <engine name="cordova-android" version=">=12.0.0" />
    </engines>

    <platform name="android">

        <!-- Register plugin -->
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="PushNotification">
                <param name="android-package"
                       value="com.adobe.phonegap.push.PushPlugin" />
            </feature>
        </config-file>

        <!-- Permissions -->
        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <uses-permission android:name="android.permission.WAKE_LOCK" />
            <uses-permission android:name="android.permission.VIBRATE" />
            <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
        </config-file>

        <!-- Application components -->
        <config-file target="AndroidManifest.xml" parent="/manifest/application">

            <activity
                android:name="com.adobe.phonegap.push.PushHandlerActivity"
                android:exported="true"
                android:permission="${applicationId}.permission.PushHandlerActivity" />

            <receiver
                android:name="com.adobe.phonegap.push.BackgroundActionButtonHandler"
                android:exported="false" />

            <!-- Modern FCM Service -->
            <service
                android:name="com.adobe.phonegap.push.FCMService"
                android:exported="false">
                <intent-filter>
                    <action android:name="com.google.firebase.MESSAGING_EVENT" />
                </intent-filter>
            </service>

        </config-file>

        <!-- AndroidX Dependencies -->
        <framework src="androidx.core:core:1.12.0" />
        <framework src="androidx.appcompat:appcompat:1.6.1" />

        <!-- Modern Firebase -->
        <framework src="com.google.firebase:firebase-messaging:23.4.1" />

        <!-- ShortcutBadger (kept if needed) -->
        <framework src="me.leolin:ShortcutBadger:1.1.21@aar" />

        <!-- Java Source Files -->
        <source-file src="src/android/com/adobe/phonegap/push/FCMService.java"
                     target-dir="app/src/main/java/com/adobe/phonegap/push/" />

        <source-file src="src/android/com/adobe/phonegap/push/PushConstants.java"
                     target-dir="app/src/main/java/com/adobe/phonegap/push/" />

        <source-file src="src/android/com/adobe/phonegap/push/PushHandlerActivity.java"
                     target-dir="app/src/main/java/com/adobe/phonegap/push/" />

        <source-file src="src/android/com/adobe/phonegap/push/PushPlugin.java"
                     target-dir="app/src/main/java/com/adobe/phonegap/push/" />

        <source-file src="src/android/com/adobe/phonegap/push/PermissionUtils.java"
                     target-dir="app/src/main/java/com/adobe/phonegap/push/" />

        <source-file src="src/android/com/adobe/phonegap/push/BackgroundActionButtonHandler.java"
                     target-dir="app/src/main/java/com/adobe/phonegap/push/" />

        <!-- Azure SDK JAR -->
        <lib-file src="src/android/notification-hubs-android-sdk-0.4.jar" />

    </platform>

</plugin>
